# Flask Configuration
FLASK_ENV=production
FLASK_SECRET_KEY=your-strong-secret-key-here-change-in-production
FLASK_DEBUG=False

# Firebase Configuration
FIREBASE_PROJECT_ID=ractaskmanagement
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=ractaskmanagement.firebaseapp.com
FIREBASE_STORAGE_BUCKET=ractaskmanagement.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_MEASUREMENT_ID=your-measurement-id

# Backend/API Configuration
# Set this to your production backend URL (do NOT include in .env file when deployed)
API_BASE_URL=https://your-api-domain.com
# For local development only:
# API_BASE_URL=http://localhost:5000

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
